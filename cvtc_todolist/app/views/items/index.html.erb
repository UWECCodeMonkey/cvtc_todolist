<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Due date</th>
      <th>Done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr class="<%= item.done? ? "done" : "" %>">
        <td><%= link_to item.title, item %></td>
        <td><%= item.due_date %></td>
        <td><%= check_box_tag "item_#{item.id}", 
        item.id , item.done, 
        title: "item[done]", class: "item-check" %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

